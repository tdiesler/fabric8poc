    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/components</outputDirectory>
                            <overWrite>true</overWrite>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-container-karaf-managed</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-container-tomcat-attributes</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-container-tomcat-managed</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-container-wildfly-managed</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
