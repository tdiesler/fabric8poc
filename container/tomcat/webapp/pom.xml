                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-git</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-domain-agent</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.fabric8.poc</groupId>
                                    <artifactId>fabric8-spi</artifactId>
                                    <version>${project.version}</version>
                                    <includes>OSGI-INF/io.fabric8.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.gravia</groupId>
                                    <artifactId>gravia-provision</artifactId>
                                    <version>${version.jboss.gravia}</version>
                                    <includes>OSGI-INF/org.jboss.gravia.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.gravia</groupId>
                                    <artifactId>gravia-resolver</artifactId>
                                    <version>${version.jboss.gravia}</version>
                                    <includes>OSGI-INF/org.jboss.gravia.**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.gravia</groupId>
                                    <artifactId>gravia-repository</artifactId>
                                    <version>${version.jboss.gravia}</version>
                                    <includes>OSGI-INF/org.jboss.gravia.**</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Gravia-Identity>${project.artifactId};version=${project.version}</Gravia-Identity>
                            <Service-Component>OSGI-INF/io.fabric8.container.karaf.internal.KarafProcessHandlerService.xml,OSGI-INF/io.fabric8.container.tomcat.attributes.TomcatHttpAttributeProvider.xml,OSGI-INF/io.fabric8.container.tomcat.attributes.TomcatJmxAttributeProvider.xml,OSGI-INF/io.fabric8.container.tomcat.internal.TomcatProcessHandlerService.xml,OSGI-INF/io.fabric8.container.wildfly.internal.WildFlyProcessHandlerService.xml,OSGI-INF/io.fabric8.core.BootstrapCompleteImpl.xml,OSGI-INF/io.fabric8.core.BootstrapService.xml,OSGI-INF/io.fabric8.core.ClusterDataStoreImpl.xml,OSGI-INF/io.fabric8.core.ComponentConfigurer.xml,OSGI-INF/io.fabric8.core.ConfigurationManager.xml,OSGI-INF/io.fabric8.core.ContainerLockManager.xml,OSGI-INF/io.fabric8.core.ContainerRegistrationImpl.xml,OSGI-INF/io.fabric8.core.ContainerRegistry.xml,OSGI-INF/io.fabric8.core.ContainerServiceImpl.xml,OSGI-INF/io.fabric8.core.CurrentContainerService.xml,OSGI-INF/io.fabric8.core.EventDispatcherImpl.xml,OSGI-INF/io.fabric8.core.HostDataStoreImpl.xml,OSGI-INF/io.fabric8.core.MBeansProvider.xml,OSGI-INF/io.fabric8.core.NetworkAttributeProviderImpl.xml,OSGI-INF/io.fabric8.core.ProfileRegistry.xml,OSGI-INF/io.fabric8.core.ProfileServiceImpl.xml,OSGI-INF/io.fabric8.core.RemoteContainerService.xml,OSGI-INF/io.fabric8.core.zookeeper.FabricACLProvider.xml,OSGI-INF/io.fabric8.core.zookeeper.FabricZooKeeperServer.xml,OSGI-INF/io.fabric8.core.zookeeper.ManagedCuratorFramework.xml,OSGI-INF/io.fabric8.domain.agent.internal.AgentService.xml,OSGI-INF/io.fabric8.spi.internal.BootConfigurationImpl.xml,OSGI-INF/io.fabric8.spi.internal.ContainerManagerImpl.xml,OSGI-INF/io.fabric8.spi.internal.ProfileBuildersImpl.xml,OSGI-INF/io.fabric8.spi.internal.ProfileManagerImpl.xml,OSGI-INF/io.fabric8.spi.internal.RuntimeServiceImpl.xml,OSGI-INF/io.fabric8.spi.permit.PermitManagerImpl.xml,OSGI-INF/org.jboss.gravia.provision.internal.ProvisionerService.xml,OSGI-INF/org.jboss.gravia.repository.internal.RepositoryMBeanService.